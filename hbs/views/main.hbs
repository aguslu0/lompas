<a href="../" >Cargar productos</a>

{{#if aProducts.length }}
        <table>
            <tr>
                <th>NOMBRE</th>
                <th>PRECIO</th>
                <th>IMAGEN</th>
            </tr>
            {{#each aProducts}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img height='100px' src='{{this.thumbnail}}' alt='{{this.title}}' /></td>
                </tr>
            {{/each}}
        </table>
{{else}}
    <h2>No hay productos cargados...</h2>
{{/if}}
